<style>
  footer {
    position: relative;
  }
  footer .title {
    font-size: 26px;
    color: #000;
    text-align: left;
  }
  footer:before {
    content: "";
    position: absolute;
    width: 880px;
    height: 70%;
    bottom: 0;
    right: 0;
    margin-right: -150px;
    background: url(../img/footer_bg.jpg) right center no-repeat;
    background-size: contain;
    -webkit-box-shadow: inset 180px 150px 150px -100px #f9f9f9;
    box-shadow: inset 180px 150px 150px -100px #f9f9f9;
    opacity: 0.6;
  }
  .footer__text {
    font-size: 32px;
    padding: 15px 0 30px;
  }
  .footer__wrap {
    padding: 35px 0;
  }
  .footer__info {
    font-size: 12px;
    line-height: 1.4;
    text-shadow:
      0 0 5px #fff,
      0 0 5px #fff,
      0 0 5px #fff;
  }
  .footer__info p {
    padding-bottom: 10px;
  }
  .footer__icon {
    display: inline-block;
    vertical-align: middle;
    max-width: 30px;
    max-height: 50px;
    margin: 0 0 0 10px;
    -webkit-transition: -webkit-transform 0.2s;
    transition: -webkit-transform 0.2s;
    -o-transition: transform 0.2s;
    transition: transform 0.2s;
    transition:
      transform 0.2s,
      -webkit-transform 0.2s;
  }
  .footer__icon svg {
    width: 25px;
    height: 25px;
  }
  .footer__icon_vk:hover svg {
    fill: #4d76a1;
  }
  .footer__icon_ok:hover svg {
    fill: #e28500;
  }

  @media (min-width: 1024px) {
    footer .title {
      text-align: left;
      font-size: 50px;
      text-transform: uppercase;
      letter-spacing: 1px;
      font-weight: 300;
    }
    .footer__wrap {
      padding: 80px 0;
    }
    .footer__text {
      font-size: 94px;
      padding: 90px 0;
    }
    .footer__info {
      font-size: 16px;
    }
  }

  @media (min-width: 1170px) {
    footer:before {
      height: 100%;
      -webkit-box-shadow:
        inset 180px 0 150px -100px #f9f9f9,
        inset 0 50px 50px #f9f9f9;
      box-shadow:
        inset 180px 0 150px -100px #f9f9f9,
        inset 0 50px 50px #f9f9f9;
      opacity: 0.7;
    }
  }
</style>
